<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F7F8FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Modern Header with Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#075E54"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GospodApp: GrÄƒdinÄƒrit fÄƒrÄƒ bÄƒtÄƒi de cap"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="8dp" />
            <!-- Truncated '...' removed here -->

        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:tint="#FFFFFF"
            android:contentDescription="Menu" />
    </LinearLayout>

    <!-- Collapsible Daily Tip Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:background="#FFFFFF"> <!-- Consider app:cardBackgroundColor="?attr/colorSurface" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dailyTipHeader" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="ðŸ’¡"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sfat zilnic"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/dailyTipArrow" 
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expand_more"
                    android:tint="#666666" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewDailyTip" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sfatul zilei se Ã®ncarcÄƒ..."
                android:textColor="#666666"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Image Preview Card (hidden by default) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/imagePreviewContainer" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners"
                android:layout_marginEnd="12dp"
                android:contentDescription="Previzualizare imagine"/> <!-- Added contentDescription -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Imagine selectatÄƒ pentru analizÄƒ"
                android:textColor="#666666"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/buttonRemoveImage" 
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:tint="#999999"
                android:contentDescription="EliminÄƒ imaginea" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Chat RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChat" 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/chat_background"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never" />

    <!-- Input Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F8FA"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:orientation="horizontal"
        android:gravity="bottom">
        <!-- Truncated '...' removed here -->

        <ImageButton
            android:id="@+id/buttonCamera" 
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_camera"
            android:tint="#075E54"
            android:contentDescription="Camera"
            android:elevation="2dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="#FFFFFF"> <!-- Changed android:background to app:cardBackgroundColor -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="10dp"
                android:paddingVertical="4dp">

                <EditText
                    android:id="@+id/editTextMessage" 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="ÃŽntreabÄƒ despre grÄƒdinÄƒrit aici..."
                    android:textColorHint="#999999"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:maxLines="4"
                    android:minHeight="40dp"
                    android:paddingVertical="8dp"
                    android:imeOptions="actionSend"
                    android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                    android:gravity="center_vertical" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Voice/Send Button (WhatsApp style) -->
        <!-- IMPORTANT: Java code uses R.id.imageButtonMic for microphone. Changed ID here. -->
        <ImageButton
            android:id="@+id/imageButtonMic" 
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/voice_button_background"
            android:src="@drawable/ic_mic"
            android:tint="#FFFFFF"
            android:contentDescription="ÃŽnregistrare vocalÄƒ"
            android:elevation="4dp"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/buttonSend" 
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/send_button_background"
            android:src="@drawable/ic_send"
            android:tint="#FFFFFF"
            android:contentDescription="Trimite mesaj"
            android:elevation="4dp"
            android:visibility="gone"
            android:scaleType="center" />


    </LinearLayout>

    <!-- Ad Banner (if not premium) -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id" /> <!-- Make sure this string resource exists -->
        
    <!-- GDPR consent banner displayed for first-time users -->
    <LinearLayout
        android:id="@+id/gdpr_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#FFF9C4"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:elevation="4dp">

        <TextView
            android:id="@+id/gdpr_notice_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Folosind aplicaÈ›ia, eÈ™ti de acord cu politica noastrÄƒ de confidenÈ›ialitate. [Vezi aici](https://gospodapp.ro/politica-confidentialitate)"
            android:autoLink="web"
            android:textSize="14sp"
            android:textColor="#333333"
            android:visibility="gone" />

        <Button
            android:id="@+id/gdpr_accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:textAllCaps="false"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
