<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:gravity="start">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:background="@drawable/chat_bubble_bot"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.2" />

        <ImageView
            android:id="@+id/imageMessage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- IMPROVED: TTS Controls in a horizontal container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/buttonSpeak"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_volume_up"
                android:background="@drawable/tts_button_background"
                android:contentDescription="Ascultă mesajul"
                android:visibility="visible"
                android:scaleType="centerInside"
                android:padding="6dp" />

            <ImageButton
                android:id="@+id/buttonStop"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_stop"
                android:background="@drawable/tts_button_background"
                android:contentDescription="Oprește"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:padding="6dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
